<configuration>
    <appender name="rollingFile"
              class="io.edap.log.appenders.rolling.RollingFileAppender">
        <file>./logs/edap-day-rollover.log</file>
        <immediateFlush>true</immediateFlush>
        <rollingPolicy
                class="io.edap.log.appenders.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>./logs/edap-day-rollover-%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%logger{36}] [%X{traceId}] [%X{spanId}]  - %msg %ex%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="rollingFile" />
    </root>
</configuration>