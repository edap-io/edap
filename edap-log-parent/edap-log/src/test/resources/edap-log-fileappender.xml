<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="baseFile"
              class="io.edap.log.appenders.FileAppender">
        <file>./edap-fileappender.log</file>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%logger{36}] [%X{traceId}] [%X{spanId}]  - %msg %ex%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="baseFile" />
    </root>
</configuration>