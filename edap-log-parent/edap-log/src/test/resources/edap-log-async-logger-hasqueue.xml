<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="baseFile"
              class="io.edap.log.test.appenders.BaseFileAppender">
        <file>./edap-asynclog.log</file>
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] [%logger{36}] [%X{traceId}] [%X{spanId}]  - %msg %ex%n</pattern>
        </encoder>
    </appender>
    <queue name="queue1">

    </queue>
    <queue name="queue2-1" class="io.edap.log.queue.DisruptorLogEventQueue">

    </queue>
    <queue name="queue2-2" class="io.edap.log.queue.DisruptorLogEventQueue1">

    </queue>
    <logger name="queue1" level="info" async="true" queue="queue1">
        <appender-ref ref="baseFile" />
    </logger>
    <logger name="queue1-1" level="info" async="true" queue="queue1">
        <appender-ref ref="baseFile" />
    </logger>
    <logger name="queue2-1" level="info" async="true" queue="queue2-1">
        <appender-ref ref="baseFile" />
    </logger>
    <logger name="queue2-2" level="info" async="true" queue="queue2-2">
        <appender-ref ref="baseFile" />
    </logger>
    <root level="info" async="true">
        <appender-ref ref="baseFile" />
    </root>
</configuration>